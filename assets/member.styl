.tweets-head
  font-size: 32px
  position: relative
  margin-top: 32px
  margin-bottom: 16px
  display: flex
  justify-content: center

  &::after
    position: absolute
    content: ""
    bottom: 0
    left: 40%
    width: 20%
    min-width: 150px
    height: 3px
    background: #039be5

.intro-container
  width: 100%
  display: flex
  justify-content: center

.intro
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-around
  height: calc(100vh - 55px)
  width: 1200px
  max-width: 1400px

  .intro-img
    height: 100%
    position: relative

    img
      height: 100%

    .drawer
      position: absolute
      bottom: 0
      width: 250px

  .intro-text
    display: flex
    flex-direction: column
    min-width: 250px

    p
      margin: 0
      font-size: 24px

    .intro-name
      margin: 4px
      font-size: 40px
      text-align: center
