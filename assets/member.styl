.tweets-head
  font-size: 32px
  position: relative
  margin-top: 32px
  margin-bottom: 16px
  display: flex
  justify-content: center

  &::after
    position: absolute
    content: ""
    bottom: 0
    left: 30%
    width: 40%
    height: 3px
    background: #039be5

.intro-container
  width: 100%
  display: flex
  justify-content: center

.intro
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-around
  min-height: calc(100vh - 55px)
  flex-wrap: wrap

  .intro-img
    position: relative

    img
      max-height: calc(95vh - 55px - 24px)
      max-width: 100%

    .drawer
      position: absolute
      top: 100%
      width: 250px

  .intro-text
    display: flex
    flex-direction: column
    min-width: 250px
    margin: 50px 50px

    p
      margin: 0
      font-size: 24px

    .intro-name
      margin: 4px
      font-size: 40px
      text-align: center
